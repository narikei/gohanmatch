!!! 5
%html
  %head
    %title ごはんまっち
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no"}
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header.p-header
      - if params[:controller] == "chats"
        %div.fl
          %a.p-header__icon{:href => "/"}
            %img{:src => asset_path("/assets/logo.png"), :height => 38, :width => 38}
        %div.p-header__center
          %a.p-header__icon{:href => "/chats"}
            %img{:src => asset_path("/assets/chat_icon.png"), :height => 38, :width => 38}

      - else
        %h1.p-header__title.fl
          %a{:href => "/"} ごはんまっち
        
        - if login_user_id
          %div.fr
            %a.p-header__icon{:href => "/chats"}
              %img{:src => asset_path("/assets/chat_icon.png"), :height => 38, :width => 38}
          

    = yield
